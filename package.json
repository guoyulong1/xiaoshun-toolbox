{
  "name": "application",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:gh": "npm run build && npx gh-pages -d dist",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "npm run build && npx netlify deploy --prod --dir=dist",
    "docker:build": "docker build -t xiaoshun-toolbox:latest .",
    "docker:run": "docker run -d -p 80:80 --name xiaoshun-toolbox xiaoshun-toolbox:latest",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up -d --build",
    "docker:stop": "docker stop xiaoshun-toolbox && docker rm xiaoshun-toolbox",
    "deploy:server": "chmod +x deploy-server.sh && ./deploy-server.sh",
    "deploy:nginx": "chmod +x deploy-nginx.sh && ./deploy-nginx.sh",
    "deploy:pm2": "chmod +x deploy-pm2.sh && ./deploy-pm2.sh",
    "serve:pm2": "pm2 serve dist 3000 --spa --name xiaoshun-toolbox",
    "pm2:stop": "pm2 delete xiaoshun-toolbox",
    "pm2:restart": "pm2 restart xiaoshun-toolbox"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "gif.js": "^0.2.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "pako": "^2.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.6.0",
    "@types/pako": "^2.0.4",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
